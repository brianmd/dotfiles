#!/bin/bash
# Usage: clolein [args]+
# Example: clolein new app test
# Example: clolein new luminus test +cljs +swagger +auth

NO_SIDE_EFFECTS=true
source cloprep

# TODO: should add .m2 directory inside bin
#   to share for each clolein run.
#   Will prevent having to download libraries
#   each time.
docker run \
  -ti \
  --rm \
  --workdir /home/clojure \
  -v $CURR_PATH:/home/clojure \
  clolein-image \
  lein $@

# --user $USERID:$GROUPID \

